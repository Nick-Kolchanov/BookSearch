@page
@model BookSearch.Pages.RegisterPageModel
@{
}

<div>
    <div>
        <div class="col-md-10 mx-auto col-lg-5">
            <h1>Книгопоиск</h1>
            <form class="p-4 p-md-5 border rounded-3 bg-light" method="post">
                <div class="form-floating mb-3">
                    <input type="text" class="form-control" id="floatingInputName" name="name" required>
                    <label for="floatingInputName">Имя</label>
                </div>
                <div class="form-floating mb-3">
                    <input type="text" class="form-control" id="floatingInput" name="login" required>
                    <label for="floatingInput">Логин</label>
                </div>
                <div class="form-floating mb-3">
                    <input type="password" class="form-control" id="floatingPassword" name="password" required>
                    <label for="floatingPassword">Пароль</label>
                </div>
                
                <div asp-validation-summary="ModelOnly"></div>

                <button class="w-100 btn btn-lg btn-primary" type="submit">Зарегистрироваться</button>

                <hr class="my-4">
                <small class="text-muted">При регистрации вы соглашаетесь с условиями использования.</small>
            </form>
        </div>
    </div>
</div>
